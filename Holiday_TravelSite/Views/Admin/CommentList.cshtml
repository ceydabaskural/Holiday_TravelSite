@using Holiday_TravelSite.Models.Entities
@model List<Comment>
@{
    ViewBag.Title = "CommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h2 class="m-3">Comments</h2>

<table class="table table-bordered">
    <tr>
        <th>Comment No</th>
        <th>Username</th>
        <th>Mail</th>
        <th>Review</th>
        <th>Blog</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Username</td>
            <td>@item.Mail</td>
            <td>@item.Review</td>
            <td>@item.Blog.Title</td>
            <td><a href="/Admin/DeleteComment/@item.CommentId" class="btn btn-danger">Delete</a></td>
            <td><a href="/Admin/UpdateComment/@item.CommentId" class="btn btn-warning">Update</a></td>
        </tr>
    }
</table>
