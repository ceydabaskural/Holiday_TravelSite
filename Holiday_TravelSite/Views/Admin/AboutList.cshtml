@using Holiday_TravelSite.Models.Entities
@model List<About>
@{
    ViewBag.Title = "AboutList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h2 class="m-3">About</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Image Url</th>
        <th>Description</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.ImageUrl</td>
            <td>@item.Description</td>
            <td><a href="/Admin/DeleteAbout/@item.AboutId" class="btn btn-danger">Delete</a></td>
            <td><a href="/Admin/UpdateAbout/@item.AboutId" class="btn btn-warning">Update</a></td>
        </tr>
    }
</table>

